pipeline {
    agent any
     environment {
        MAVEN_HOME = 'C:\DevTools\apache-maven-3.8.6'
        set JAVA_HOME = 'C:\Program Files\Java\jre-1.8'
    }

    stages {
        stage('Checkout') {
            steps {
                // Checkout your code from the Git repository
                git branch: 'master', url: 'https://github.com/anju0625/jenkins-piepline.git'
            }
        }

        stage('Build and Test') {
            steps {
                // Set Java and Maven paths temporarily
                bat "set PATH=%MAVEN_HOME%\\bin;%JAVA_HOME%\\bin;%PATH% && mvn clean install"
            }
        }
    }

    post {
        success {
            echo 'Pipeline executed successfully!'
        }
        failure {
            echo 'Pipeline failed!'
        }
    }
}
